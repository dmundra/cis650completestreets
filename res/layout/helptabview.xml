<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content">
	<ScrollView android:id="@+id/helpScrollView"
		android:layout_width="wrap_content" android:layout_toLeftOf="@+id/helpText" android:layout_height="280px">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/helpText"
			android:text="Help and Guidelines"></TextView>
	</ScrollView>
	<CheckBox android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/socketCheck"
		android:text="Started Socket Service" android:layout_below="@+id/helpScrollView"
		android:layout_marginLeft="10px" android:layout_marginTop="5px" />
	<Button android:layout_below="@id/socketCheck"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:id="@+id/clearAllButton" android:layout_marginLeft="10px"
		android:text="Clear Geo Stamps" android:layout_marginTop="10px" />
	<Button android:layout_below="@id/socketCheck"
		android:layout_toRightOf="@id/clearAllButton"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:id="@+id/recreateAllButton" android:layout_marginLeft="10px"
		android:text="Recreate tables" android:layout_marginTop="10px" />

</RelativeLayout>
