<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:background="#000000" android:orientation="vertical"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true" android:id="@+id/zoomView">

		<com.google.android.maps.MapView
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:apiKey="0D0cO4r6J87BK9tYVqHPGIfLYqnnFzvHnvDoOuQ" android:id="@+id/mapView"
			android:clickable="true" android:enabled="true" />

	</LinearLayout>
	<Button android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:id="@+id/recordFromMapTab" 
        android:text="Record"
        android:width = "100px" 
        android:layout_alignParentTop = "true"
        android:layout_alignParentLeft = "true"
        android:layout_marginLeft= "10px"
        android:layout_marginTop= "10px"/>

</RelativeLayout>
